    <script>
        var input;
        input = window.prompt("input your number");
        document.getElementById("num").innerHTML=input;
        for (i = 1; i < 13; i++) {
            var idx = i.toString();
            document.getElementById(idx).innerHTML = i * input;
        }
    </script>
